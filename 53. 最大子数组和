class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        int n=nums.size();
        int res=nums[0];
        int pre=res;
        for(int i=1;i<n;i++){
            pre=max(pre+nums[i],nums[i]);
            if(pre>res)res=pre;
        }
        return res;
    }
};
